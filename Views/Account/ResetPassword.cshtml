@{
    ViewBag.Title = "Tạo mật khẩu mới";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<body>
    <div class="container mt-5">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }
        <div class="card mx-auto" style="max-width: 500px;">
            <div class="card-body">

                <h3 class="text-center">Tạo mật khẩu mới</h3>

                @if (!String.IsNullOrEmpty(ViewBag.Message as string))
                {
                    <div class="alert alert-info mt-3">@ViewBag.Message</div>
                }

                @using (Html.BeginForm("ResetPasswordConfirm", "Account", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="otp" class="form-label">Nhập mã OTP:</label>
                        <input type="text" name="otp" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Mật khẩu mới:</label>
                        <input type="password" name="newPassword" class="form-control" required />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
